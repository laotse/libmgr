#
# Makefile for template classes
#
# $Id: Makefile.in,v 1.7 2007-06-01 21:25:21 mgr Exp $
#
# see rule below for creation of this file

TOPDIR := @TOPDIR@

include @CONFDIR@Makefile.machine

LIBINC := $(TOPDIR)$(INCDIR)

TOPT = -DTEST -ggdb

# no libobj, all templates here
LIBOBJ=
TESTS=test-RingBuffer$(EXE)
INCLUDES=RefCounter.h

$(TOPDIR)$(LIBDIR)libutil.a: $(LIBOBJ)
	ar rcs $@ $^
	@RANLIB@ $@

all: $(LIBOBJ)

include:
	@INSTALL@ -p -m 644 $(INCLUDES) $(LIBINC)

install:
	@INSTALL@ -p -m 644 $(INCLUDES) $(INSTINC)

test: $(TESTS)
	#$(DELETE) *.o
	@echo "Created module tests:"
	@$(LIST) test-*$(EXE)

tags:
	find . -maxdepth 1 -type f -regex '.*/[^/]*\.\(c\|h\|cpp\|tag\)$$' \
         | sed -e "s+^\./+$(PREFIX)/+" \
	 >> $(TOPDIR)$(LISTFILE)

snapshot:
	find . -maxdepth 1 -type f -regex '.*/[^/]*\.\(c\|h\|cpp\|tag\)$$' \
         | sed -e "s+^\./+$(PREFIX)/+" \
	 >> $(TOPDIR)$(LISTFILE)
	echo $(PREFIX)/Makefile.in >> $(TOPDIR)$(LISTFILE)

doclist:
	@for f in $(INCLUDES); do \
	  echo $(INCDIR)$$f >> $(TOPDIR)$(LISTFILE); \
	done
	@for f in $(patsubst %.o,%.cpp,$(LIBOBJ)); do \
	  echo $(PREFIX)/$$f >> $(TOPDIR)$(LISTFILE); \
	done

test-RingBuffer$(EXE): RingBuffer.cpp RingBuffer.h
	$(CC) $(TOPT) $(COPT) -o$@ $< $(LOPT) $(TOPDIR)$(LIBDIR)libutil.a

.cpp.o:
	@if test ! -e $*.tag; then \
	 $(TOPDIR)version.sh $*.tag create; \
	else \
	 $(TOPDIR)version.sh $*.tag build; \
	fi
	$(CC) -c $(COPT) -DNO_DEBUG $<

# external debugging objects
.PHONY: debug_objects

.cpp.odg:
	$(CC) -c $(COPT) -ggdb -o$*.odg $<

clean:
	$(DELETE) *.o
	$(DELETE) test-*$(EXE)
	$(DELETE) *$(EXE).stackdump

veryclean:
	$(DELETE) *.o
	$(DELETE) -f *$(BAK)
	$(DELETE) *$(EXE).stackdump
	$(DELETE) *.a
